{
    "name": "keycloakify-cqgc-app",
    "version": "0.1.0",
    "description": "CQGC Theme using keycloakify",
    "scripts": {
        "build": "react-scripts build",
        "keycloak": "npm run theme && npm run build-keycloak-theme",
        "start": "react-scripts start",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint $(git diff-index --name-only --diff-filter=d HEAD | grep \".*[\\.js|\\.jsx|\\.tsx|\\.ts]$\" | sed 's/^.\\{11\\}//' | xargs)",
        "lint:fix": "eslint --fix --rule 'no-console: 2'",
        "build-keycloak-theme": "npm run build && keycloakify",
        "eject-keycloak-page": "eject-keycloak-page",
        "download-builtin-keycloak-theme": "download-builtin-keycloak-theme",
        "theme": "mkdir -p src/style/themes/cqgc/dist && npm run theme:antd",
        "theme:antd": "npm run theme:antd:colors && npm run theme:antd:main",
        "theme:antd:main": "lessc --js src/style/themes/cqgc/antd-cqgc-theme.less src/style/themes/cqgc/dist/antd.css",
        "theme:antd:colors": "less2sass ./src/style/themes/cqgc/colors.less && mv -f ./src/style/themes/cqgc/colors.scss ./src/style/themes/cqgc/dist/_colors.scss"
    },
    "author": "ferlab",
    "license": "MIT",
    "keywords": [],
    "dependencies": {
        "antd": "^4.20.0",
        "@ferlab/ui": "^5.5.8",
        "@ferlab/style": "^1.29.2",
        "@reduxjs/toolkit": "^1.9.5",
        "keycloakify": "^7.6.3",
        "react": "18.1.0",
        "react-dom": "18.1.0",
        "react-redux": "^8.0.5"
    },
    "devDependencies": {
        "@types/node": "^15.3.1",
        "@types/react": "^18.0.9",
        "@types/react-dom": "^18.0.4",
        "eslint": "^8.15.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.5.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-sort-destructure-keys": "^1.4.0",
        "eslint-plugin-sort-keys-fix": "^1.1.2",
        "less": "^4.1.3",
        "less2sass": "^1.0.3",
        "prettier": "^2.0.5",
        "prettier-eslint": "^10.1.1",
        "react-scripts": "^5.0.1",
        "sass": "^1.60.0",
        "typescript": "~4.7.0"
    },
    "lint-staged": {
        "cqgc-theme/src/**/*.{ts,tsx}": [
          "npm run lint&fix"
        ]
    },
    "prettier": {
        "printWidth": 100,
        "trailingComma": "all",
        "singleQuote": true
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}